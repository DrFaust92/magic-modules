data "google_project" "project" {}

resource "google_project_iam_member" "kms-secret-binding" {
  project = data.google_project.project.project_id
  role    = "roles/cloudkms.cryptoKeyEncrypterDecrypter"
  member  = "serviceAccount:service-${data.google_project.project.number}@gcp-sa-secretmanager.iam.gserviceaccount.com"
}

resource "google_secret_manager_secret" "<%= ctx[:primary_resource_id] %>" {
  secret_id = "<%= ctx[:vars]['secret_id'] %>"
  
  labels = {
    label = "my-label"
  }
  replication {
    user_managed {
      replicas {
		location = "us-central1"
		customer_managed_encryption {
			kms_key_name = "<%= ctx[:vars]['key_name_central'] %>"
		}
	  }
	replicas {
		location = "us-east1"
		customer_managed_encryption {
			kms_key_name = "<%= ctx[:vars]['key_name_east'] %>"
		}
      }
	  
    }
  }
}